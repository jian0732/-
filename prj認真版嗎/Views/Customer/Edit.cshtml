@using prj認真版嗎.ViewModel
@model CMember
@{
    ViewData["Title"] = "Edit";
}
<div id="pa">
    <h1>會員修改資料</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MembersId" />
                <div class="form-group">
                    <label asp-for="MemberName" class="control-label"></label>
                    <input asp-for="MemberName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Gender" class="control-label"></label>
                    <input asp-for="Gender" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="CityId" class="control-label"></label>
                    <input asp-for="CityName" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="BirthDay" class="control-label"></label>
                    <input asp-for="BirthDay" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="PhotoPath" class="control-label"></label>
                    <input asp-for="PhotoPath" class="form-control" />
                </div>

                <div class="form-group">
                    <label for="InputFile">選擇檔案</label>
                    <input type="file" class="form-control-file" id="InputFile" name="photo">
                </div>

                <div class="form-group">
                    <label asp-for="MemberStatusId" class="control-label"></label>
                    <select id="Status" name="MemberStatusName"></select>
                    @*<input asp-for="MemberStatusName" class="form-control">*@
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">回列表</a>
    </div>
</div>
@section Scripts{
    <script>
     const selStatus = document.querySelector("#Status");
        (async function () {
            await loadStatus()
        }())
        async function loadStatus() {
            await ajaxCall("@Url.Content("~/customer/Status")", rendering, selStatus)
        }
        async function ajaxCall(url, rendering, sel) {
            let response = await fetch(url)
            let datas = await response.json()
            rendering(sel, datas)
        }
        function rendering(sel, datas) {
            sel.options.length = 0
            datas.forEach(S => {
                const opt = new Option(S, S)
                sel.options.add(opt)
            })
        }
    </script>
}

