@model prj認真版嗎.ViewModel.CAdminViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>修改管理員/權限</h1>
<br />
<div>
    <a asp-action="Index">管理員列表</a>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="AdminId" type="hidden" class="form-control" name="AdminId" />
            </div>
            <div class="form-group">
                <label asp-for="AdminName" class="control-label"></label>
                <input asp-for="AdminName" class="form-control" name="AdminName" />
            </div>
            <div class="form-group">

                <label asp-for="Account" class="control-label"></label>
                <input asp-for="Account" class="form-control" name="Account" id="Account" />
                <small id="NameHelp" class="form-text text-muted"></small>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" name="Password" />
            </div>

            <div class="form-group">
                <label asp-for="CommentStatus" class="control-label"></label>
                <input asp-for="CommentStatus" type="checkbox" name="CommentStatus" />&nbsp;
                <label asp-for="MemberStatus" class="control-label"></label>
                <input asp-for="MemberStatus" type="checkbox" name="MemberStatus" />&nbsp;
                <label asp-for="ProductStatus" class="control-label"></label>
                <input asp-for="ProductStatus" type="checkbox" name="ProductStatus" />&nbsp;
                <label asp-for="AdminStatus1" class="control-label"></label>              
                <input asp-for="AdminStatus1" type="checkbox" name="AdminStatus1" />
            </div>
            <div class="form-group">
                <input type="submit" value="確認修改" class="btn btn-primary" />
            </div>

        </form>

    </div>
</div>



@section Scripts {
    <script>
        const Account = document.querySelector("#Account")
        const Help = document.querySelector("#NameHelp")
    Account.addEventListener("blur",async () => {
        let rp = await fetch('@Url.Content("~/Admin/Cy")' + `?Account=${Account.val()}`)
    let data = await rp.text();
    Help.txtAccount = data;
    })

       
    </script>
}
