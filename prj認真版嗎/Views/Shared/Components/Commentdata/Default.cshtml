@using prj認真版嗎.ViewModel
@model C評論畫面
@{
    Layout = null;
}
<div>
    <h3>評價內容 / 修改</h3>
</div>
<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <input asp-for="CommentId" type="hidden" class="form-control" name="AdminId" />
    </div>
    <div class="form-group">
        <label asp-for="MembersId" class="control-label"></label>
        <input asp-for="會員名稱" class="form-control" name="MembersId" />
    </div>
    <div class="form-group">
        <label asp-for="TravelProductId" class="control-label"></label>
        <input asp-for="產品名稱" class="form-control" id="TravelProductId" />
    </div>
    <div class="form-group">
        <label asp-for="CommentDate" class="control-label"></label>
        <input asp-for="CommentDate" class="form-control" name="CommentDate" />
    </div>

    <div class="form-group">
        <label asp-for="CommentText" class="control-label"></label>
        <input asp-for="CommentText" type="checkbox" name="CommentText" />
    </div>
    <div class="form-group">
        <input type="submit" value="確認修改" class="btn btn-primary" />
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" style="right:0">關閉</button>
    </div>

</form>