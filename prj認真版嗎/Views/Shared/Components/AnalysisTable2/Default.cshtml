
@{
    Layout = null;
}
@*<script src="~/lib/jian/main.js"></script>*@
<div class="d-flex" style="width:700px;height:300px">
    <canvas id="myChart" width="100" height="100"></canvas>
    <div id="calendar"></div>
</div>

<input type="hidden" id="c" value="@ViewBag.M國家" />
<input type="hidden" id="p" value="@ViewBag.M營業額" />




<script>

    var x = document.querySelector("#c").value.split(",");
    var s = document.querySelector("#p").value.split(",");


    var bkc = [
        'rgba(255, 99, 132, 0.2)',
        'rgba(255, 159, 64, 0.2)',
        'rgba(255, 205, 86, 0.2)',
        'rgba(75, 192, 192, 0.2)',
        'rgba(54, 162, 235, 0.2)',
        'rgba(153, 102, 255, 0.2)',
        'rgba(201, 203, 207, 0.2)'
    ];

    var bdc = [
        'rgb(255, 99, 132)',
        'rgb(255, 159, 64)',
        'rgb(255, 205, 86)',
        'rgb(75, 192, 192)',
        'rgb(54, 162, 235)',
        'rgb(153, 102, 255)',
        'rgb(201, 203, 207)'
    ];

    var ctxx = document.getElementById('myChart').getContext('2d');
    var myChart = new Chart(ctxx, {
        type: 'bar',
        data: {
            labels: x,
            datasets: [{
                label: "當月熱賣國家",
                data: s,
                backgroundColor: bkc,
                borderColor: bdc,
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        },
    });


</script>
