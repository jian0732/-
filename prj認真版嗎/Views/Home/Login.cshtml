
<head>
    <title>Login Page</title>
    @*<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">*@
    <link href="~/css/JianLogin.css" rel="stylesheet" />
    <!--Custom styles-->
    @*<link rel="stylesheet" type="text/css" href="styles.css">*@
</head>
<div class="body">
    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="cardd">
                <div class="card-headerss">
                    <h3 class="hhh3">Sign In</h3>
                    <div class="d-flex justify-content-end social_icon">
                    </div>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            <input type="text" class="form-control" placeholder="Account" name="txt帳號" id="id">
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <input type="password" class="form-control" placeholder="password" name="txt密碼" id="ps">
                        </div>
                        <div class="form-group">
                            <input type="button" value="Demo" class="btn float-left login_btn" id="demo">
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Login" class="btn float-right login_btn">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{ 
    <script>
        const id = document.querySelector("#id");
        const ps = document.querySelector("#ps");
        $("#demo").click(function () {
            id.value = "B";
            ps.value = "55123";
        })

    </script>
}

